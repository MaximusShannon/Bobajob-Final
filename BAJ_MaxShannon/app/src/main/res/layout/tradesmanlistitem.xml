<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/companyIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/workinprogress" />

    <TextView
        android:id="@+id/browseAds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: "
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold|italic"
        android:layout_below="@+id/companyName"
        android:layout_alignLeft="@+id/textView44"
        android:layout_alignStart="@+id/textView44" />

    <TextView
        android:id="@+id/companyName"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/browseAds"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/browseAds"
        android:text="TextView"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Number:"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold|italic"
        android:layout_below="@+id/browseAds"
        android:layout_alignLeft="@+id/textView48"
        android:layout_alignStart="@+id/textView48" />

    <TextView
        android:id="@+id/textView48"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="County: "
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold|italic"
        android:layout_below="@+id/textView44"
        android:layout_toRightOf="@+id/companyIcon"
        android:layout_toEndOf="@+id/companyIcon"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/tradeCounty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView48"
        android:layout_alignBottom="@+id/textView48"
        android:layout_alignLeft="@+id/companyNumber"
        android:layout_alignStart="@+id/companyNumber"
        android:text="TextView"
        android:textColor="@color/colorPrimary"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/companyNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/colorPrimary"
        android:textStyle="italic"
        android:layout_alignBaseline="@+id/textView44"
        android:layout_alignBottom="@+id/textView44"
        android:layout_toRightOf="@+id/textView44"
        android:layout_toEndOf="@+id/textView44"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp" />

    <TextView
        android:id="@+id/tradeEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/colorPrimary"
        android:textStyle="italic"
        android:layout_below="@+id/companyName"
        android:layout_alignLeft="@+id/companyNumber"
        android:layout_alignStart="@+id/companyNumber" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView48"
        android:layout_alignStart="@+id/textView48"
        android:layout_below="@+id/textView48"
        android:text="_______________________________________"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold|italic" />
</RelativeLayout>